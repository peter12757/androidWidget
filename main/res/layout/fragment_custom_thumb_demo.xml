<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background_color">

    <com.litao.slider.NiftySlider
        android:id="@+id/nifty_slider"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:padding="16dp"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="50"
        app:layout_constraintBottom_toTopOf="@+id/nifty_slide2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:thumbRadius="16dp"
        app:haloRadius="32dp"/>

    <com.litao.slider.NiftySlider
        android:id="@+id/nifty_slide2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:padding="16dp"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="50"
        app:enableDrawHalo="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nifty_slider"
        app:thumbRadius="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>